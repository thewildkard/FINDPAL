
<style>
    body, html {
        height: 100%;
        margin: 0;
        padding: 0;
        background: #f8f9fa;
    }

    .forgot-password-outer {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .forgot-password-container {
        width: 100%;
        max-width: 400px;
        background: #fff;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        padding: 32px 24px 24px 24px;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

        .forgot-password-container h2 {
            text-align: center;
            margin-bottom: 24px;
            font-weight: 600;
            color: #2c3e50;
            width: 100%;
        }

    .form-group {
        margin-bottom: 18px;
        width: 100%;
    }

    .form-control {
        border-radius: 4px;
        border: 1px solid #dfe6e9;
        box-shadow: none;
        transition: border-color 0.2s;
        width: 100%;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 0 2px rgba(0,123,255,0.08);
        }

    .btn-primary {
        width: 100%;
        padding: 10px 0;
        font-size: 16px;
        border-radius: 4px;
        background: #007bff;
        border: none;
        transition: background 0.2s;
    }

        .btn-primary:hover, .btn-primary:focus {
            background: #0056b3;
        }

    .alert {
        width: 100%;
        margin-bottom: 16px;
        padding: 10px 16px;
        border-radius: 4px;
        font-size: 15px;
    }

    .alert-danger {
        background: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
    }

    .alert-success {
        background: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }

    .login-link {
        display: block;
        text-align: center;
        margin-top: 18px;
        color: #007bff;
        text-decoration: none;
        font-weight: 500;
    }

        .login-link:hover {
            text-decoration: underline;
        }
</style>

<div class="forgot-password-outer">
    <div class="forgot-password-container">
        <h2>Forgot Password</h2>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }
        @if (ViewBag.Success != null)
        {
            <div class="alert alert-success">@ViewBag.Success</div>
        }

        @using (Html.BeginForm("ForgotPassword", "Findpal", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label for="userName">Username</label>
                <input type="text" name="userName" class="form-control" required />
            </div>
            <div class="form-group">
                <label for="rollNumber">Roll Number</label>
                <input type="number" name="rollNumber" class="form-control" required />
            </div>
            <div class="form-group">
                <label for="newPassword">New Password</label>
                <input type="password" name="newPassword" class="form-control" required />
            </div>
            <button type="submit" class="btn btn-primary">Reset Password</button>
        }

        <a href="@Url.Action("Login", "Findpal")" class="login-link">Back to Login</a>
    </div>
</div>