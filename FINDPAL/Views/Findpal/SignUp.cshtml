@model FINDPAL.Models.User

@{
    ViewBag.Title = "SignUp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body, html {
        height: 100%;
        margin: 0;
        padding: 0;
    }

    .signup-outer {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #f8f9fa;
    }

    .signup-container {
        width: 100%;
        max-width: 500px;
        background: #fff;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        padding: 32px 24px 24px 24px;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

        .signup-container h2 {
            text-align: center;
            margin-bottom: 24px;
            font-weight: 600;
            color: #2c3e50;
            width: 100%;
        }

    .form-horizontal {
        width: 100%;
    }

        .form-horizontal .form-group {
            margin-bottom: 18px;
        }

        .form-horizontal .control-label {
            text-align: left;
            font-weight: 500;
            color: #34495e;
        }

    .form-control {
        border-radius: 4px;
        border: 1px solid #dfe6e9;
        box-shadow: none;
        transition: border-color 0.2s;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 0 2px rgba(0,123,255,0.08);
        }

    .btn-primary {
        width: 100%;
        padding: 10px 0;
        font-size: 16px;
        border-radius: 4px;
        background: #007bff;
        border: none;
        transition: background 0.2s;
    }

        .btn-primary:hover, .btn-primary:focus {
            background: #0056b3;
        }

    .text-danger {
        font-size: 13px;
        margin-top: 4px;
    }

    .login-link {
        display: block;
        text-align: center;
        margin-top: 18px;
        color: #007bff;
        text-decoration: none;
    }

        .login-link:hover {
            text-decoration: underline;
        }
</style>

<div class="signup-outer">
    <div class="signup-container">
        <h2>Create Account</h2>

        @using (Html.BeginForm("SignUp", "Findpal", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(m => m.UserName, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(m => m.UserName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.RollNumber, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(m => m.RollNumber, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(m => m.RollNumber, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Hpassword, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.Hpassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Hpassword, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Sign Up" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        }
        <a href="@Url.Action("Login", "Findpal")" class="login-link">Already have an account? Login</a>
    </div>
</div>


