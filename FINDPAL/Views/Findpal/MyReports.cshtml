
@{
    ViewBag.Title = "MyReports";
}

<h2>MyReports</h2>

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Category</th>
                    <th>Status</th>
                    <th>Location</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td>@item.Description</td>
                        <td>@item.Category</td>
                        <td>@item.Status</td>
                        <td>@item.Location</td>
                        <td>
                            <a href="@Url.Action("FoundItemDetail", "Findpal", new { id = item.ItemId })" class="btn btn-info btn-sm">View Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p>You have not reported any items yet.</p>
}
