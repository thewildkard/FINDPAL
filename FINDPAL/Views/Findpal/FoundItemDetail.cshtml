
@{
    ViewBag.Title = "FoundItemDetail";
}

<h2>FoundItemDetail</h2>

@if (Model != null)
{
    <div class="row">
        <div class="col-md-6">
            <h4>@Model.Title</h4>
            <p><strong>Description:</strong> @Model.Description</p>
            <p><strong>Category:</strong> @Model.Category</p>
            <p><strong>Status:</strong> @Model.Status</p>
            <p><strong>Location:</strong> @Model.Location</p>
            <p><strong>Reported On:</strong> @Model.DateReported?.ToString("MMMM dd, yyyy")</p>

            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <div>
                    <h5>Item Image:</h5>
                    <img src="@Url.Content(Model.ImagePath)" alt="Item Image" class="img-fluid" />
                </div>
            }
        </div>

        <div class="col-md-6">
            <h4>Actions</h4>
            @if (Model.Status != "Found")
            {
                <form method="post" action="@Url.Action("MarkAsFound", "Findpal", new { id = Model.ItemId })">
                    <button type="submit" class="btn btn-success">Mark as Found</button>
                </form>
            }
        </div>
    </div>
}
else
{
    <p>Item not found.</p>
}
